        "goals_page": {
            "options": {"collapsed": true},
            "type": "object",
            "title": "Goals page",
            "description": "This setting is used in the 'goals' layout. It can display a title and description above the grid of goal tiles.",
            "$ref": "#/definitions/title_and_description",
            "links": [
